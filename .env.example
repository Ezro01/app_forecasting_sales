# Database Configuration (для внешней БД через CI/CD)
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=BD_Dobroteka
DB_USER=postgres
DB_PASSWORD=your_password_here

# SFTP Configuration (для внешнего SFTP через CI/CD)
SFTP_HOST=your_sftp_host
SFTP_PORT=22
SFTP_USERNAME=your_sftp_username

# Environment Type (local, stage, prod)
ENV_TYPE=local

# SSH Keys - путь к файлу ключа или содержимое ключа
# Формат 1: Путь к файлу ключа (относительный от корня проекта или абсолютный)
SSH_KEY_LOCAL=id_ed25519
# SSH_KEY_LOCAL=./id_ed25519
# SSH_KEY_LOCAL=/absolute/path/to/id_ed25519

# Формат 2: Содержимое ключа (для CI/CD - полное содержимое с BEGIN/END строками)
# SSH_KEY_LOCAL=-----BEGIN OPENSSH PRIVATE KEY-----\n...

# Для других окружений:
# SSH_KEY_STAGE=/path/to/stage/key
# SSH_KEY_PROD=/path/to/prod/key

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000

# Local Data Files (опционально, только для локальной разработки)
TRAIN_DATA_PATH=data/train_df.csv
TEST_DATA_PATH=data/test_df.csv

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
